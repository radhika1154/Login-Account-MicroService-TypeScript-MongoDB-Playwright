{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "moduleResolution": "node",
      "module": "commonjs",
      "target": "es6",
      "strict": true,
      "esModuleInterop": true,
      "baseUrl": "./",
      "paths": {
        "@route/*": ["src/route/*"],
        "@controllers/*": ["src/controllers/*"],
        "@models/*": ["src/models/*"],
        "@repo/*": ["src/repo/*"],
        "@services/*": ["src/services/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  