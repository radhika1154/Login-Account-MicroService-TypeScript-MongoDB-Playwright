{
  "name": "microservices_playwright",
  "version": "1.0.0",
  "description": "Login & Account Microservices with MongoDB In NodeJs",
  "dependencies": {
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "express": "^4.21.2",
    "mongodb": "^6.12.0",
    "mongoose": "^8.9.4",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@types/body-parser": "^1.19.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5"
  },
  "scripts": {
    "build": "tsc",
    "startLoginServer": "tsc && node -r tsconfig-paths/register dist/loginServer.js",
    "startAccountServer": "tsc && node dist/accountServer.js",
    "test": "playwright test",
    "test:login": "playwright test tests/login.spec.ts",
    "test:account": "playwright test tests/account.spec.ts"
  }
}
